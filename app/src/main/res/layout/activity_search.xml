<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meow.hanwei.travelapp.Search">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Itinerary"
        android:id="@+id/toItinerary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <!--android:layout_alignRight="@+id/religious"-->
    <!--android:layout_alignEnd="@+id/religious"-->

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.meow.hanwei.travelapp.MultiSpinner
    android:id="@+id/parks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="61dp" />

    <com.meow.hanwei.travelapp.MultiSpinner
    android:id="@+id/religious"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/parks"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <com.meow.hanwei.travelapp.MultiSpinner
    android:id="@+id/museums"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/religious"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <com.meow.hanwei.travelapp.MultiSpinner
    android:id="@+id/entertainment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/museums"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <com.meow.hanwei.travelapp.MultiSpinner
    android:id="@+id/food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/entertainment"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>
